rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Protect the artifacts/{appId}/users/{userId} path where data is actually stored
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Legacy rule for backward compatibility (can be removed if not used)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}